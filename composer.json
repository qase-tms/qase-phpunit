{
    "name": "qase/phpunit-reporter",
    "description": "Qase TMS PHPUnit reporter.",
    "homepage": "https://developers.qase.io",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Kamil Samigullin",
            "email": "kamil@samigullin.info"
        },
        {
            "name": "Sergey Skaridov",
            "email": "s.skaridov@gmail.com"
        }
    ],
    "keywords": [
        "qase",
        "tms",
        "reporter",
        "php",
        "phpunit"
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "phpunit/phpunit": "^8.0 || ^9.0",
        "qase/api": "v1.2.0",
        "qase/php-client-utils": "^1.0.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpstan/phpstan": "^1.3",
        "roave/security-advisories": "dev-latest",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.18"
    },
    "autoload": {
        "psr-4": {
            "Qase\\PHPUnit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    }
}
